<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">


    <ImageView
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:src="@drawable/lock"
        android:tint="@color/black" />

    <com.example.mendez.transportdysplay.customfonts.MyTextView_Roboto_Regular
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agrega tu"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25sp"
        android:gravity="left"
        android:paddingLeft="30dp"
        android:layout_marginTop="10dp"/>
    <com.example.mendez.transportdysplay.customfonts.MyTextView_Roboto_Regular
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="número de teléfono"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25sp"
        android:paddingBottom="20dp"
        android:gravity="left"
        android:paddingLeft="30dp"/>



    <com.example.mendez.transportdysplay.customfonts.MyTextView_Roboto_Regular
        android:id="@+id/texto"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="introduce tu número de teléfono nuevo"
        android:textColor="@color/colorTexto"
        android:textSize="15sp"
        android:paddingBottom="5dp"
        android:gravity="left"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"/>





    <RelativeLayout
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/rlnu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15">

        <android.support.design.widget.TextInputLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/FormTextInputLayou"
            android:theme="@style/FormTextInputLayoutTheme">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/ednu"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="@string/mobile"
                android:inputType="phone"
                android:singleLine="true"
                android:drawablePadding="@dimen/margin_10"
                android:textColor="@color/black"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="@dimen/font_18"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:maxLength="8"/>

        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/rlco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:visibility="gone">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/FormTextInputLayou"
            android:theme="@style/FormTextInputLayoutTheme">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edcodi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/codigo"
                android:inputType="textCapWords"
                android:singleLine="true"
                android:drawablePadding="@dimen/margin_10"
                android:textColor="@color/colorTexto"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="@dimen/font_16"
                android:focusable="true"
                android:focusableInTouchMode="true"
                />

        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/rlnm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:visibility="gone">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/FormTextInputLayou"
            android:theme="@style/FormTextInputLayoutTheme">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_nom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/user_name"
                android:inputType="textCapWords"
                android:singleLine="true"
                android:drawablePadding="@dimen/margin_10"
                android:textColor="@color/colorTexto"
                android:textColorHint="@color/colorPrimaryDark"
                android:textSize="@dimen/font_16"
                android:focusable="true"
                android:focusableInTouchMode="true"
                />

        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/signup_ract"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:id="@+id/layout_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            style="@style/RippleBlanco">

            <com.example.mendez.transportdysplay.customfonts.MyTextView_Roboto_Regular
                android:id="@+id/tv_edt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:paddingBottom="12dp"
                android:paddingLeft="33dp"
                android:paddingRight="33dp"
                android:paddingTop="10dp"
                android:text="Verificar Número"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </com.balysv.materialripple.MaterialRippleLayout>
    </RelativeLayout>

    <LinearLayout

        android:gravity="center"
        android:id="@+id/vr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <RelativeLayout
            android:background="@drawable/signup_ract"
            android:layout_marginRight="5dp"
            android:textAlignment="center"
            android:id="@+id/layout_ver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.balysv.materialripple.MaterialRippleLayout
                android:background="@drawable/fb_media_rosado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                style="@style/RippleBlanco">
            <com.example.mendez.transportdysplay.customfonts.MyTextView_Roboto_Regular
                android:id="@+id/tv_ver"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:text="Verificar datos"
                android:textColor="#ffff"

                android:textSize="20sp" />
            </com.balysv.materialripple.MaterialRippleLayout>

        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/signup_ract"
            android:layout_marginLeft="5dp"
            android:id="@+id/layout_ree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.balysv.materialripple.MaterialRippleLayout
                android:background="@drawable/fb_media_rosado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                style="@style/RippleBlanco">
            <com.example.mendez.transportdysplay.customfonts.MyTextView_Roboto_Regular
                android:id="@+id/tv_ree"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:text="Reenviar código "
                android:textColor="#ffff"
                android:textSize="20sp" />
            </com.balysv.materialripple.MaterialRippleLayout>

        </RelativeLayout>
    </LinearLayout>






    


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.6dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="2dp"
        app:cardCornerRadius="3.8dp"
        android:layout_marginRight="10.6dp"
        android:id="@+id/cdvi">

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/ripple_cli"
            style="@style/RippleBlanco"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:id="@+id/viewc"
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="18dp"
                            android:gravity="center"
                            android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/us"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Usuario"
                            android:textColor="#262628"
                            android:textSize="15.4sp" />
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="20dp"
                                android:gravity="center_vertical">

                                <View
                                    android:id="@+id/view"
                                    android:layout_width="7dp"
                                    android:layout_height="7dp"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/orange_circle"/>

                                <TextView
                                    android:id="@+id/es"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="CONFIRMED"
                                    android:textColor="@color/colorOrange"
                                    android:textSize="12dp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">


                                <ImageView
                                    android:id="@+id/i1"
                                    android:layout_marginTop="6.3dp"
                                    android:layout_marginLeft="14.4dp"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:src="@drawable/pin_black"/>

                                <ImageView
                                    android:id="@+id/i2"
                                    android:layout_marginLeft="26dp"
                                    android:layout_width="2dp"
                                    android:layout_height="26.9dp"
                                    android:src="@drawable/rect_dotted"
                                    android:layerType="software"/>

                                <ImageView
                                    android:id="@+id/i3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/navigatiob_blue"
                                    android:layout_marginLeft="22dp"/>
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="5.4dp">


                                <com.example.mendez.transportdysplay.customfonts.MyTextView_Roboto_Regular
                                    android:id="@+id/ori"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Phoenix Market City"
                                    android:textSize="13.4sp"
                                    android:layout_marginLeft="14.3dp"
                                    android:textColor="#323643"/>

                                <com.example.mendez.transportdysplay.customfonts.MyTextView_Roboto_Regular
                                    android:id="@+id/des"
                                    android:layout_marginTop="30dp"
                                    android:layout_marginLeft="14.3dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Home"
                                    android:textSize="13.4sp"
                                    android:textColor="#323643"/>
                            </LinearLayout>


                        </LinearLayout>



                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/History_Id"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="2dp"
                        android:src="@drawable/calendario_icon"
                        android:tint="#d22532" />

                    <TextView
                        android:id="@+id/fe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6.7dp"
                        android:layout_weight="1"
                        android:text="28 Nov 2017 10 : 30 AM"
                        android:textColor="#4a4a4a"
                        android:textSize="12sp" />


                    <TextView
                        android:textAlignment="center"
                        android:padding="3dp"
                        android:background="@drawable/rect_black"
                        android:id="@+id/iv_map"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:layout_weight="1"
                        android:text="Ver mas"
                        android:textColor="@color/white"
                        android:textSize="17sp" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
        </com.balysv.materialripple.MaterialRippleLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

</LinearLayout>

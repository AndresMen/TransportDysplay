<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_bg2">
<LinearLayout
    android:paddingTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_marginBottom="10dp"
        android:padding="20dp"
        android:background="@drawable/circulo"
        android:tint="@color/colorPrimaryDark"
        android:layout_gravity="center"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/mensaje_icon" />

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.example.mendez.transportdysplay.customfonts.MyTextView_Roboto_Regular
            android:id="@+id/tvt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuevo mensaje"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />

        <com.example.mendez.transportdysplay.customfonts.MyTextView_Roboto_Regular
            android:id="@+id/tvme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sample"
            android:textColor="@color/colorTexto"
            android:textSize="17sp" />
    </LinearLayout>


</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_weight="1"
            app:mrl_rippleColor="@color/colorLinea"
            android:id="@+id/ripple_producto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.example.mendez.transportdysplay.customfonts.MyTextView_Roboto_Regular
            android:textStyle="bold"
            android:id="@+id/btncersms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="10dp"
            android:text="Cerrar"
            android:textColor="@color/comment_color"
            android:layout_weight="2"
            android:textSize="22sp" />
        </com.balysv.materialripple.MaterialRippleLayout>


        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_weight="1"
            app:mrl_rippleColor="@color/colorLinea"
            android:id="@+id/ripple_producto2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <com.example.mendez.transportdysplay.customfonts.MyTextView_Roboto_Regular
            android:textStyle="bold"
            android:id="@+id/btnversms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="10dp"
            android:text="Ver"
            android:layout_weight="2"
            android:textColor="@color/sucess_color"
            android:textSize="22sp" />

        </com.balysv.materialripple.MaterialRippleLayout>




</LinearLayout>


</LinearLayout>
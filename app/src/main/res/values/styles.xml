    <style name="MyCustomTheme" parent="@android:style/Theme.Holo.Dialog.NoActionBar">
        <item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>
    </style>

    <style name="MyAnimation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/scale_enter</item>
        <item name="android:windowExitAnimation">@anim/scale_exit</item>
    </style>



    <style name="RippleBlanco" parent="RippleStyleWhite">
        <item name="mrl_rippleColor">@color/white</item>
    </style>
    <style name="RippleAcent" parent="RippleStyleWhite">
        <item name="mrl_rippleColor">@color/dialog_error_color</item>
    </style>

    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">@color/white</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>
    <style  name = "RatingBar"  parent = "Theme.AppCompat" >
        <item  name = "colorControlNormal" > @color/white </item>
        <item  name = "colorControlActivated" > @color/yellow_texi </item>
